@model Produs
<div class="container">
    <h1 class="text-center">Editeaza un produs</h1>
    <form method="post" enctype="multipart/form-data">@*enctype pentru upload*@
        <input asp-for="Id" hidden/>
        <input  asp-for="ImagineUrl" hidden/>
        <div class="d-flex justify-content-center">
            <div class="col-7">
                <div class="form-group row">
                    <div class="col-4 pt-2">
                        <label asp-for="Nume"></label>
                    </div>
                    <div class="col-8 pt-2">
                        <input asp-for="Nume" class="form-control" />
                        <span asp-validation-for="Nume" class="text-danger"></span>
                    </div>

                    <div class="col-4 pt-2">
                        <label asp-for="Autor"></label>
                    </div>
                    <div class="col-8 pt-2">
                        <input asp-for="Autor" class="form-control" />
                        <span asp-validation-for="Autor" class="text-danger"></span>
                    </div>

                    <div class="col-4 pt-2">
                        <label asp-for="Descriere"></label>
                    </div>
                    <div class="col-8 pt-2">
                        <textarea asp-for="Descriere" rows="3" class="form-control"></textarea>
                        <span asp-validation-for="Descriere" class="text-danger"></span>
                    </div>
                    <div class="col-4 pt-2">
                        <label asp-for="Cantitate"></label>
                    </div>
                    <div class="col-8 pt-2">
                        <input asp-for="Cantitate" class="form-control" />
                        <span asp-validation-for="Cantitate" class="text-danger"></span>
                    </div>
                    <div class="col-4 pt-2">
                        <label asp-for="Cod"></label>
                    </div>
                    <div class="col-8 pt-2">
                        <input asp-for="Cod" class="form-control" />
                        <span asp-validation-for="Cod" class="text-danger"></span>
                    </div>
                    <div class="col-4 pt-2">
                        <label asp-for="CategorieId"></label>
                    </div>
                    <div class="col-8 pt-2">
                        <select asp-for="CategorieId" asp-items="@(ViewData["CategorieLista"] as IEnumerable<SelectListItem>)" class="form-select">
                        <option disabled selected>--Selecteaza Categoria--</option>
                    </select>
                    <span asp-validation-for="CategorieId" class="text-danger"></span>
                    </div>
                    <div class="col-4 pt-2">
                        <label asp-for="ImagineUrl"></label>
                    </div>
                    <div class="col-8 pt-2">
                        <input type="file" id="uploadBox" name="fisier" class="form-control" />
                        <span asp-validation-for="Cod" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 pt-2 text-center">
                        <img src="@Model.ImagineUrl" class="img-fluid img-thumbnail rounded border border-dark"/>
                    </div>
               
            </div>
        </div>
        <div class="d-flex justify-content-center  pt-3">
            <div class="col-6 col-lg-2">
                <div class="form-group row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary">Editeaza</button>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-primary">Inapoi</a>
                    </div>
                </div>
            </div>
        </div>



    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}