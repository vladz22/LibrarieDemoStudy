@model Categorie
<div class="container">
    <h1 class="text-center">Sterge categoria</h1>
    <form method="post">
      <div class="d-flex justify-content-center ">
        <div class="form-group row">
         <div class="col-4 pt-2">
            <label asp-for="Nume"></label>
         </div>
          <div class="col-8 pt-2">
            <input asp-for="Nume" class="form-control"/>
            <span asp-validation-for="Nume" class="text-danger"></span>
         </div>
        </div>
       
      </div>
      <div class="d-flex justify-content-center  pt-3">
          <div class="form-group row">
       <div class="col-6">
          <button type="submit" class="btn btn-danger">Stergere</button>
         
      </div>
      <div class="col-6">
           <a asp-action="Index" class="btn btn-primary">Inapoi</a>
      </div>
       </div>
       </div>
      
      
        
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
